
module fourbitfulladder(
    input  [3:0] a,
    input  [3:0] b,
    input        cin, //carry in
    input 	 en, //enable
    output [3:0] sum,
    output       cout //carry out
);
    wire c1, c2, c3; //carry bits

    fulladder i0(a[0], b[0], cin,  sum[0], c1);
    fulladder i1(a[1], b[1], c1,   sum[1], c2);
    fulladder i2(a[2], b[2], c2,   sum[2], c3);
    fulladder i3(a[3], b[3], c3,   sum[3], cout);

    assign sum  = en ? sum  : 4'b0000; //enable function
    assign cout = en ? cout : 1'b0;

endmodule